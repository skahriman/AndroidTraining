<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native"/>

    <!--HttpUrlConnection-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Native"
        android:onClick="makingRestCalls"
        android:id="@+id/btnNative"/>

    <!--OkHttp-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OkHttp (Sync)"
        android:onClick="makingRestCalls"
        android:id="@+id/btnOkHttpSync"/>

    <!--OkHttp Async-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OkHttp (Async)"
        android:onClick="makingRestCalls"
        android:id="@+id/btnOkHttpAsync"/>

    <!--Retrofit Sync-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit (Sync)"
        android:onClick="makingRestCalls"
        android:id="@+id/btnRetrofitSync"/>

    <!--Retrofit Async-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit (Async)"
        android:onClick="makingRestCalls"
        android:id="@+id/btnRetrofitAsync"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="___"/>
</LinearLayout>