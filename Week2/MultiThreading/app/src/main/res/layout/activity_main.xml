<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:gravity="center"
        android:textSize="25sp"
        android:id="@+id/tvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--Thread-->
    <Button
        android:text="Start Thread"
        android:id="@+id/btnThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onStartThread"/>

    <!--Runnable-->
    <Button
        android:text="Start Runnable"
        android:id="@+id/btnRunnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onStartRunnable"/>

    <!--AsyncTask-->
    <Button
        android:text="Start AsyncTask"
        android:id="@+id/btnAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onStartAsyncTask"/>

    <Button
        android:text="Start Events"
        android:id="@+id/startEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onStartEventBus"/>


</LinearLayout>