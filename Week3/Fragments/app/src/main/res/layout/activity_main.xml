<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Static fragment-->
    <fragment
        android:id="@+id/fragBlue"
        android:name="com.example.sefakkahriman.fragments.fragments.BlueFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button

        android:text="Add Blue"
        android:id="@+id/btnAddBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onAddingFragments"/>
    <Button
        android:text="Add Red"
        android:id="@+id/btnAddRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onAddingFragments"/>

    <!-- Dynamic fragments-->
    <!-- Placeholder 1-->
    <FrameLayout
        android:id="@+id/flHolder1"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <!-- Placeholder 2-->
    <FrameLayout
        android:id="@+id/flHolder2"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

</LinearLayout>