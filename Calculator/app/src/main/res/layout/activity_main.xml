<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="50dp"
        android:text=" "
        android:textAlignment="center"
        android:textSize="35dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/C"
            android:text="C"
            android:textSize="25dp"
            android:onClick="cClick"
            />
        <Button
            android:id="@+id/division"
            android:text="%"
            android:textSize="25dp"
            android:onClick="clickOnOperator"
            />
        <Button
            android:id="@+id/multiplication"
            android:text="x"
            android:textSize="25dp"
            android:onClick="clickOnOperator"
            />
        <Button
            android:id="@+id/backspace"
            android:text="â†"
            android:textSize="25dp"
            />
        <Button
            android:id="@+id/seven"
            android:text="7"
            android:textSize="25dp"
            android:onClick="clickOnNumber"
            />
        <Button
            android:id="@+id/eight"
            android:text="8"
            android:textSize="25dp"
            android:onClick="clickOnNumber"
            />
        <Button
            android:id="@+id/nine"
            android:text="9"
            android:textSize="25dp"
            android:onClick="clickOnNumber"
            />
        <Button
            android:id="@+id/minus"
            android:text="-"
            android:textSize="25dp"
            android:onClick="clickOnOperator"
            />
        <Button
            android:id="@+id/four"
            android:text="4"
            android:textSize="25dp"
            android:onClick="clickOnNumber"
            />
        <Button
            android:id="@+id/five"
            android:text="5"
            android:textSize="25dp"
            android:onClick="clickOnNumber"
            />
        <Button
            android:id="@+id/six"
            android:text="6"
            android:textSize="25dp"
            android:onClick="clickOnNumber"
            />
        <Button
            android:id="@+id/pluss"
            android:text="+"
            android:textSize="25dp"
            android:onClick="clickOnOperator"
            />
        <Button
            android:id="@+id/one"
            android:text="1"
            android:textSize="25dp"
            android:onClick="clickOnNumber"
            />
        <Button
            android:id="@+id/two"
            android:text="2"
            android:textSize="25dp"
            android:onClick="clickOnNumber"
            />
        <Button
            android:id="@+id/three"
            android:text="3"
            android:textSize="25dp"
            android:onClick="clickOnNumber"
            />
        <Button
            android:id="@+id/parentese"
            android:text="()"
            android:textSize="25dp"
            />
        <Button
            android:id="@+id/zero"
            android:text="0"
            android:textSize="25dp"
            android:onClick="clickOnNumber"
            />
        <Button
            android:id="@+id/dot"
            android:text="."
            android:textSize="25dp"
            />
        <Button
            android:id="@+id/plussminos"
            android:text="+/-"
            android:textSize="25dp"
            />
        <Button
            android:id="@+id/equal"
            android:text="="
            android:textSize="25dp"
            android:onClick="clickOnEquals"
            />

    </GridLayout>

</LinearLayout>