<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/etMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSaveData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="handleSharedPreferences"
            android:text="Save data"/>

        <Button
            android:id="@+id/btnGetData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="handleSharedPreferences"
            android:text="Get data"/>

        <TextView
            android:id="@+id/tvMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"/>


        <!--SQL database-->
        <EditText
            android:id="@+id/etPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Doe"/>

        <EditText
            android:id="@+id/etPersonAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="23"/>

        <EditText
            android:id="@+id/etPersonGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"/>

        <Button
            android:id="@+id/btnSavePerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="handlingDatabase"
            android:text="Save person"/>

        <Button
            android:id="@+id/btnGetAllPersons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="handlingDatabase"
            android:text="Get persons"/>

        <!--UI to test Room database-->
        <EditText
            android:id="@+id/etBookISBN"
            android:hint="isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etBookName"
            android:hint="Book name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etBookAuthor"
            android:hint="Author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSaveBook"
            android:text="Save Book"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onGetAllBooks"
            android:text="Get All Book"/>
    </LinearLayout>

</ScrollView>